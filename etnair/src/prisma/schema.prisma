generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
 id    Int   @id @default(autoincrement())
 nickname String @unique 
 email String @unique
 password String
 created_at DateTime @default(now())
 host_arrived Boolean
}

model Ads {
  id    Int   @id @default(autoincrement())
  title String
  renter User @relation("nickname", fields: [renterId], references: [id])
  renterId Int 
  description String
  location String
  nightly_price Int
  created_at DateTime @default(now())
}

model Bookings {
  id    Int   @id @default(autoincrement())
  nightly_price Int
  start_date DateTime
  end_date DateTime
  created_at DateTime @default(now())
}

