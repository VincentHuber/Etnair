generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int        @id @default(autoincrement())
  nickname     String
  email        String     @unique
  password     String
  picture      String
  created_at   DateTime   @default(now())
  host_arrived Boolean?
  ads          Ads[]      @relation("UserAds")
  bookings     Bookings[] @relation("UserBookings")
}

model Ads {
  id               Int        @id @default(autoincrement())
  title            String
  renter           User       @relation("UserAds", fields: [renterId], references: [id])
  renterId         Int
  street_adress    String
  city             String
  zipcode          Int
  description      String
  bookable_dates   DateTime[]
  price            Int
  number_of_guests Int
  number_of_rooms  Int
  size             Int
  features         String[]
  pictures         String[]
  created_at       DateTime   @default(now())
  bookings         Bookings[] @relation("AdsBookings")
}

model Bookings {
  id         Int      @id @default(autoincrement())
  start_date DateTime
  end_date   DateTime
  created_at DateTime @default(now())
  ads        Ads      @relation("AdsBookings", fields: [adId], references: [id])
  adId       Int
  tenant     User     @relation("UserBookings", fields: [tenantId], references: [id])
  tenantId   Int
}
